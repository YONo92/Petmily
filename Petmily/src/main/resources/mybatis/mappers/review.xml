<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petmily.dao.ReviewDAO">
	<select id="selectReviewCount" resultType="int">

	</select>


	<insert id="insertReview">
	<![CDATA[
		insert into review ( review_title, review_content , review_create_date) 
		values(#{review_title} , #{review_content} , now() )
	]]>
	</insert>


	<select id="selectMaxReviewNum" resultType="Integer">
	<![CDATA[
		select max(review_num) from review
 	]]>
	</select>
</mapper>
