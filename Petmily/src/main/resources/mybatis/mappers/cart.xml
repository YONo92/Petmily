<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petmily.dao.CartDAO">

	
	<!--  이걸로 해당 유저의 아이디를 가져옴 cart.dto로 user_id와 prod_num를 세팅해서 전달  -->
	<!-- 장바구니 클릭하면 해당 상품이 이미 장바구니에 담겼는지 안담겼는지를 체크해서, 없으면 추가하고, 있으면 이미 상품이 존재한다는 메세지 출력 -->
	<!-- cart table에 추가하기 전 product_num가 cart에 담겼는지를 조회 -->
	<!-- cart(dto)에 user_id, prod_num를 이용해서 cart 테이블에서 해당 상품정보를 조회해서 0이면 false, 그 외는 다 true, false일때 클릭한 상품을 cart테이블에 저장 -->
	<select id="cartQueryById" resultType="Cart" parameterType="String"> 
	<![CDATA[ 
		SELECT prod_num, cart_amount FROM petmily.cart where user_id=#{user_id}
	]]> 
	</select> 
	
	<select id="prodQueryByProdNum" resultType="Product" parameterType="int"> 
	<![CDATA[ 
		SELECT * FROM petmily.product where prod_num=#{prod_num}
	]]> 
	</select> 
	

	
	
	
	
	<!--cart 테이블에 Cart(dto)로 전달된 상품정보를 추가한다. cart테이블에는 prod_num만 저장  -->
	<insert id="insertProductInCart" parameterType="Cart">
	<![CDATA[
		insert into cart((prod_num, user_id))
		values(#{cart_num}, #{prod_num}, #{user_id})
	]]> 
	<!--상품 추가 -->
	</insert>
	
	
	
	<!--모든 장바구니 정보를 조회-->
	<select id="selectCartList" resultMap="cartResult" parameterType="Cart">모든 장바구니 정보를 조회
	<![CDATA[
		select * from cart where user_id=#{user_id}
	]]>
	</select>
	

	<!--cart테이블에 등록된 prod_num를 이용해서 상품 정보를 조회하는 역할 -->
	<!--Map으로 받은 mycartList가 카트리스트에 있는 상품번호로 foreach문을 이용해서 상품정보를 조회한 후 반환cart 테이블에 등록된 상품 번호를 이용해서, product 테이블에서 cart 테이블에 저장된 
			prod_num를 이용해서 상품 정보를 조회해온다. -->
		<select id="selectProdList" resultMap="prodResult" parameterType="java.util.Map">
      <![CDATA[
          select p.*, u.user_id from product p, user u 
          where p.prud_num = u.user_id
      ]]>  
		<foreach item="item" collection="list" open="(" separator="," close=")">

		</foreach>
	</select>
	<!-- 상품 업데이트 -->
	<update id="updateCartProd" parameterType="Cart">
	<![CDATA[	
		update cart set 
	]]> 
	</update>
	
	
	<!--상품 삭제  -->
	<delete id="deleteCartProd" parameterType="int">
	<![CDATA[
		delete from cart where cart_num=#{cart_num}
	]]> 	
	</delete>
	
	<!-- --><!---->	<!---->	<!---->	<!---->	<!---->
		
		
  	<!-- 리절트 맵 정의 (장바구니 목록에서 보여줄 것들) -->
	<resultMap id="cartResult" type="Cart"> <!-- 장바구니 정보를 저장-->
		<result property="cart_num" column="cart_num" />
		<result property="prod_num" column="prod_num" />
		<result property="user_id" column="user_id" />
		<result property="cart_amount" column="cart_amount" />
	</resultMap>
	
	<resultMap id="prodResult" type="Product"> <!-- 장바구니 페이지에 표시할 상품 정보-->
		<result property="prod_num" column="prod_num" />
		<result property="prod_title" column="prod_title" />
		<result property="prod_img" column="prod_img" />
		<result property="prod_price" column="prod_price" />
		<result property="prod_name" column="prod_name" />
		<result property="prod_content" column="prod_content" />
	</resultMap>	
</mapper>  
