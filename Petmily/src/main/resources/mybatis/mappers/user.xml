<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petmily.dao.UserDAO">

	<!-- 나의 정보 조회 -->
	<select id="queryUserID" resultType="user"
		parameterType="String">
      <![CDATA[
         select * from user where user_id = #{user_id}
      ]]>
	</select>
	<!-- 회원 가입 -->
	<insert id="insertUser" parameterType="user">
		<![CDATA[
			insert into user values(#{user_id},#{user_pwd},#{user_name},#{user_name},#{user_email},
			#{user_address1},#{user_address2},#{user_zipcode},#{user_totaddress},#{user_birth},#{user_phone}
			,#{user_type})
		]]>
	</insert>

	<!-- 나의 정보 수정 -->
	<update id="updateUser" parameterType="String">
		<![CDATA[
        	update user set user_pwd=${user_pwd}, user_nickname=${user_nickname}, user_phone=${user_phone} 
        	where user_id = #{user_id}
      	]]>
	</update>
	</mapper>
	


