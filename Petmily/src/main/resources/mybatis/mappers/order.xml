<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.petmily.dao.OrderDAO">

	<insert id="insertOrder" parameterType="order">
	<![CDATA[
		insert into order (order_num,user_id,prod_num,order_status,order_count,order_date) 
		values(#{order_num},#{user_id},#{prod_num},#{order_status},#{order_count},now())
	]]>		
	</insert>	
	
	<select id="selectMaxOrderNum" resultType="integer">
		<![CDATA[
			select max(order_num) from order
		]]>
	</select>	
<select id="orderList" parameterType="String" >
        select * from orders where user_id = #{user_id}
    </select>
</mapper>
